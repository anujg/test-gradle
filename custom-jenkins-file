def label = 'stable&&docker&&ubuntu1604&&sudo&&"language:shell"&&env&&gradle'
podTemplate(label: label, containers: [
    containerTemplate(name: 'gradle', image: 'registry2.swarm.devfactory.com/aurea/central/jervis/sandbox-java:latest')
  ]) {

    node(label) {
        stage('Build project') {
            container('gradle') {
                stage('Build a gradle project') {
                    sh './buildscripts/build.sh'
                }
            }
        }
    }
}